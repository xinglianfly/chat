<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xiner.activity.RegisterActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            tools:context="com.example.xiner.activity.RegisterActivity">

            <com.example.xiner.chat.views.CircularImage
                android:id="@+id/register_ac_face_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/faceimage" />


            <EditText
                android:textColor="@color/black_translucent"
                android:id="@+id/register_ac_email_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_ac_face_iv"
                android:layout_marginTop="20dp"
                android:hint="请输入邮箱" />

            <EditText
                android:textColor="@color/black_translucent"
                android:id="@+id/register_ac_password_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_ac_email_et"
                android:layout_marginTop="20dp"
                android:hint="请输入密码"
                android:password="true" />

            <EditText
                android:textColor="@color/black_translucent"
                android:id="@+id/register_ac_passwordagain_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_ac_password_et"
                android:layout_marginTop="20dp"
                android:hint="请再次密码"
                android:password="true" />

            <EditText
                android:textColor="@color/black_translucent"
                android:id="@+id/register_ac_nickname_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_ac_passwordagain_et"
                android:layout_marginTop="20dp"
                android:hint="请输入昵称"
                />

            <RadioGroup
                android:id="@+id/register_ac_sex_rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"

                android:layout_weight="1"
                android:layout_below="@+id/register_ac_nickname_et"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/register_ac_man_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="男" />

                <RadioButton
                    android:id="@+id/register_ac_woman_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="女" />
            </RadioGroup>

            <Button
                android:id="@+id/register_ac_register_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_ac_sex_rg"
                android:layout_marginTop="20dp"
                android:background="@color/material_deep_teal_500"
                android:text="注册"
                android:textColor="@android:color/white" />
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>